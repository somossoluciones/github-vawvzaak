---
import '../styles/main.scss';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "StarDogs | Criadero Premium de Dachshund en Colombia | Envíos a USA",
  description = "Criador especializado de Dachshund en Colombia. Cachorros de alta calidad con envíos internacionales. Más de 10 años de experiencia criando salchichas con los más altos estándares."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>